<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="16dp"
    tools:context=".activity.OtpActivity">

    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:src="@drawable/arrow_back_24" />

    <TextView
        style="@style/text_header_bold_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/backArrow"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/backArrow"
        android:text="OTP Verification" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backArrow"
        android:layout_marginTop="77dp"
        android:orientation="vertical">

        <TextView
            style="@style/text_roboto_normal_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="We have sent a verification code to" />

        <TextView
            style="@style/text_roboto_bold_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="+91-9910016801" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dp"
            android:weightSum="5"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:layout_marginTop="2dp"
                app:cardCornerRadius="10dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/black"
                android:elevation="16dp">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:layout_marginTop="2dp"
                app:cardCornerRadius="10dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/black"
                android:elevation="16dp">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:layout_marginTop="2dp"
                app:cardCornerRadius="10dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/black"
                android:elevation="16dp">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:layout_marginTop="2dp"
                app:cardCornerRadius="10dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/black"
                android:elevation="16dp">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:layout_marginTop="2dp"
                app:cardCornerRadius="10dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/black"
                android:elevation="16dp">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:layout_width="169dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                android:hint="Resend SMS in 14s"/>

            <EditText
                android:layout_width="169dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                android:hint="Call me in 14s"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:layout_marginVertical="24dp"
            android:text="Please wait for a few second"
            style="@style/text_roboto_bold_14"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/button_continue"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="8dp"
            android:backgroundTint="#828282"
            android:elevation="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continue"
                android:textSize="16dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>