<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/iv_product_img"
        android:layout_width="match_parent"
        android:layout_height="316dp"
        android:scaleType="fitXY"
        android:layout_marginTop="-8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/image_rectangle_item" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_product_img">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/example_product_name"
                style="@style/text_header_bold_28"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"/>

            <LinearLayout
                android:id="@+id/location_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_product_name"
                android:layout_marginStart="16dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_roboto_normal_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wembley, London" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="12dp"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/location_icon"/>

                <TextView
                    style="@style/text_roboto_normal_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 km to city" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_price"
                style="@style/text_header_bold_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/location_layout"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="Price" />

            <TextView
                style="@style/text_header_bold_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/location_layout"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="24dp"
                android:text="Quantity" />


            <TextView
                android:id="@+id/tv_product_price"
                style="@style/text_header_bold_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_price"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="â‚¹90" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/tv_price"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:gravity="center"
                        android:text="-"
                        android:background="@drawable/bg_circular_black"
                        android:textSize="20sp" />

                    <TextView
                        style="@style/text_roboto_normal_16"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="16dp"
                        android:gravity="center_vertical"
                        android:text="03" />


                    <TextView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:gravity="center"
                        android:background="@drawable/bg_green_circular"
                        android:text="+"
                        android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_product_price"
                android:background="@drawable/rectangle_offer_background"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_header_bold_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Buy this at" />

                <TextView
                    style="@style/text_header_bold_orange_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingHorizontal="8dp"
                    android:text="$113.8" />

                <TextView
                    style="@style/text_header_bold_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="with" />

                <TextView
                    style="@style/text_header_bold_orange_18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:layout_marginEnd="16dp"
                    android:text="See Plans" />


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>