<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="16dp"
    tools:context=".activity.CheckoutActivity">

    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:src="@drawable/arrow_back_24" />

    <TextView
        android:id="@+id/checkout_back"
        style="@style/text_header_bold_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/backArrow"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/backArrow"
        android:text="Checkout" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_totalSaving"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_below="@+id/checkout_back"
        android:layout_marginTop="16dp"
        android:backgroundTint="#D9D9D9"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <TextView
                style="@style/text_roboto_normal_16_0157D9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your total savings" />

            <TextView
                style="@style/text_roboto_normal_16_0157D9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="$2" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_checkout"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_below="@+id/cv_totalSaving"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:id="@+id/ll_useCoupons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rv_checkout"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="17dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_coupoun" />

        <TextView
            style="@style/text_header_bold_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:text="Use Coupons" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_arrow_forward" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_totalItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_useCoupons"
        android:layout_marginTop="28dp"
        android:orientation="horizontal">

        <TextView
            style="@style/text_roboto_normal_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 item total (incl. taxes)" />

        <TextView
            style="@style/text_roboto_normal_16_6A6A6A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="$92" />

        <TextView
            style="@style/text_roboto_normal_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:gravity="right"
            android:text="$90 " />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_deliveryCharge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_totalItem"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            style="@style/text_roboto_normal_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery charge" />

        <TextView
            style="@style/text_roboto_normal_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:gravity="right"
            android:text="$5 " />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_delivery"
        style="@style/text_roboto_normal_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_deliveryCharge"
        android:layout_marginTop="4dp"
        android:text="Shop for $22 more, to save $5 on delivery charge  " />

    <LinearLayout
        android:id="@+id/ll_grandTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_delivery"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            style="@style/text_roboto_normal_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grand total" />

        <TextView
            style="@style/text_roboto_normal_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:gravity="right"
            android:text="$95 " />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_delivery_location"
        style="@style/text_roboto_normal_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_grandTotal"
        android:layout_marginTop="24dp"
        android:text="Delivery location" />


    <LinearLayout
        android:id="@+id/ll_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_delivery_location"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="17dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_location_head" />

        <TextView
            android:id="@+id/tv_pocket"
            style="@style/text_header_bold_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="Pocket C 1" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_address1"
        style="@style/text_roboto_normal_16_828282"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_address"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="8dp"
        android:text="Kondli, New kondli Delhi Mayur Vihar Delhi Delhi-110096 India" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_changeLocation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_address1"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="10dp">

        <TextView
            style="@style/text_roboto_normal_16_80BA43"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Change location" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/ll_otherForElse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv_changeLocation"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <TextView
            style="@style/text_roboto_normal_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order for someone else" />

        <TextView
            style="@style/text_roboto_normal_16_80BA43"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:gravity="right"
            android:text="ADD" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_gpay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_otherForElse"
        android:layout_marginTop="23dp"
        android:src="@drawable/logo_gpay" />

    <TextView
        android:id="@+id/tv_payUsing"
        style="@style/text_roboto_normal_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_otherForElse"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="23dp"
        android:layout_toEndOf="@+id/iv_gpay"
        android:text="Pay using"
        android:textFontWeight="300" />

    <ImageView
        android:id="@+id/iv_downArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_otherForElse"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="23dp"
        android:layout_toEndOf="@+id/tv_payUsing"
        android:paddingTop="5dp"
        android:src="@drawable/logo_down_arrow" />

    <TextView
        android:id="@+id/tv_googlePay"
        style="@style/text_roboto_normal_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_downArrow"
        android:layout_alignStart="@+id/iv_gpay"
        android:layout_marginTop="8dp"
        android:text="Google Pay"
        android:textFontWeight="400" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/iv_gpay"
        android:layout_alignParentRight="true"
        android:backgroundTint="#80BA43"
        android:elevation="16dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    style="@style/text_roboto_normal_16_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:text="$95" />

                <TextView
                    style="@style/text_roboto_normal_12_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:text="Total" />

            </LinearLayout>

            <TextView
                style="@style/text_roboto_normal_16_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="16dp"
                android:gravity="right"
                android:text="Place order" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_googlePay"
        android:layout_marginTop="12dp"
        android:text="Orders cannot be cancelled once packed for delivery. In case of unexpected delays, a refund will be provided.If applicable"
        style="@style/text_roboto_normal_12_6a6a6a"/>

</RelativeLayout>